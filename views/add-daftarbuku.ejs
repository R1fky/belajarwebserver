<div class="container mt-3">
    <div class="row">
      <div class="col-md-6">
        <h2>Tambah Buku</h2>
  
        <form method="post" action="/daftarbuku">
          <div class="mb-3">
            <label for="judulbuku" class="form-label">JudulBuku</label>
            <input type="text" class="form-control" id="judulbuku" name="judulbuku" required/>
          </div>
          <div class="mb-3">
            <label for="penulis" class="form-label">Penulis</label>
            <input type="email" class="form-control" id="penulis" name="penulis" required/>
          </div>
          <div class="mb-3">
            <label for="terbit" class="form-label">Terbit</label>
            <input type="text" class="form-control" id="terbit" name="terbit"/>
          </div>
          <button type="submit" class="btn btn-primary">Tambah data Buku</button>
        </form>
      </div>
    </div>
  </div>
  