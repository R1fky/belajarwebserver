<div class="container mt-3">
  <a href="/daftarbuku/add" class="btn btn-primary">Tambah data contact</a>
  <% if (daftarbuku.length === 0) { %>
  <div class="alert alert-danger" role="alert">Daftar Buku tidak ada</div>
  <% } %> <% daftarbuku.forEach(buku => { %>

  <div class="card mt-3" style="width: 18rem">
    <div class="card-body">
      <h5 class="card-title"><%= buku.judulbuku %></h5>
      <h6 class="card-subtitle mb-2 text-body-secondary"><%= buku.penulis %></h6>
      <a href="./daftarbuku/<%= buku.judulbuku %>" class="card-link">Info Lanjutan</a>
    </div>
  </div>
  <% }) %>
</div>
