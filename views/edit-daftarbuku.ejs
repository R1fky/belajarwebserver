<div class="container mt-3">
  <div class="row">
    <div class="col-md-6">
      <h2>Tambah Buku</h2>

      <% if (typeof errors != 'undefined') { %>
      <div class="alert alert-danger" role="alert">
        <ul>
          <% errors.forEach(err => { %>
            <li><%= err.msg %></li>
          <% }) %>
        </ul>
      </div>
        <% } %>

        <form method="post" action="/daftarbuku/update">
          <input type="hidden" name="oldjudul" value="<%= (buku.oldjudul) ? buku.oldjudul : buku.judulbuku %>">
          <div class="mb-3">
            <label for="judulbuku" class="form-label">JudulBuku</label>
            <input type="text" class="form-control" id="judulbuku" name="judulbuku" required value="<%= buku.judulbuku %>"/>
          </div>
          <div class="mb-3">
            <label for="penulis" class="form-label">Penulis</label>
            <input type="email" class="form-control" id="penulis" name="penulis" required value="<%= buku.penulis %>"/>
          </div>
          <div class="mb-3">
            <label for="terbit" class="form-label">Terbit</label>
            <input type="text" class="form-control" id="terbit" name="terbit" value="<%= buku.terbit %>"/>
          </div>
          <button type="submit" class="btn btn-primary">Ubah data buku</button>
        </form>
      </div>
    </div>
  </div>
</div>
